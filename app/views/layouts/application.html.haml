!!!
%html
  %head
    %link{:rel => "shortcut icon", :href => "/favicon.ico"}
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html;charset=utf-8"}
    
    %title= page_title
    
    -if @meta
      -@meta.each do |key|
        %meta{:name=>key[0], :content=>key[1]}
  
    = stylesheet_link_tag 'reset', :media => :all
    = stylesheet_link_tag 'text', :media => :all
    = stylesheet_link_tag '960', :media => :all
    = stylesheet_link_tag 'screen', :media => :screen
    
    = javascript_include_tag 'jquery-1.3.2.min'
    = javascript_include_tag 'jquery-ui-1.7.2.custom.min'
    
    = yield :head
    
  %body
    #container.container_16
      #header.grid_16.alpha.omega
        = render :partial => "layouts/header"
      .clear
      #ln.grid_3.alpha
        = render :partial => "layouts/left_nav"
      #mc.grid_13.omega
        = yield
      .clear
      #footer.grid_16.alpha.omega
        = render :partial => "layouts/footer"